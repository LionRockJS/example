{%- liquid
  assign cacheId = 1
-%}
<!doctype html>
<html lang="{{ language }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, shrink-to-fit=no">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="format-detection" content="telephone=no">
  <link rel="icon" href="/media/favicon/favicon.ico" type="image/x-icon"/>
  <link rel="shortcut icon" href="/media/favicon/favicon.ico" type="image/x-icon"/>

  <title>LionRock Admin</title>

  <link rel="stylesheet" href="/media/css/site.css?r={{ cacheId }}">
  {% for css in meta.stylesheets %}    <link rel="stylesheet" href="/media/css/{{ css }}?r={{ cacheId }}" />
  {% endfor %}

  {% for script in meta.scripts %}
    {% if script contains '.mjs' %}
      <script type="module" src="/media/js/{{ script }}?r={{ cacheId }}"></script>
    {% else %}
      <script type="application/javascript" src="/media/js/{{ script }}?r={{ cacheId }}" ></script>
    {% endif %}
  {% endfor %}

  {% for script in meta.external_scripts %}<script type="application/javascript" src="{{ script }}" async></script>
  {% endfor %}

  {% for script in meta.defer_scripts %}
    {% if script contains '.mjs' %}
      <script type="module" src="/media/js/{{ script }}?r={{ cacheId }}" defer></script>
    {% else %}
      <script type="application/javascript" src="/media/js/{{ script }}?r={{ cacheId }}" defer></script>
    {% endif %}
  {% endfor %}

  <script type="application/javascript" src="/media/js/admin.js?r={{ cacheId }}" defer></script>

  {% render "head/tailwindcss", cacheId: cacheId %}
</head>
<body class="{{ controller }} {{ controller }}-{{ action }} role-{{ user_role }}">
{% render "logo" %}
<header>
</header>
{{ main }}
</body>
</html>